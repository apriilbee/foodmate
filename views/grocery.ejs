<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>

  <style>
    /* Body Styling */
    body {
      font-family: 'Nunito', sans-serif;
      background-color: #f9f9f9;
      margin: 0;
      padding: 0;
    }

    /* Header Styling (Foodmate Bar) */
    h2 {
      margin-top: 30px;
      font-family: 'Bebas Neue', sans-serif;
      letter-spacing: 1px;
    }

    /* Form and List Styling */
    .grocery-form {
      margin-top: 30px;
      margin-bottom: 50px;
    }

    .grocery-list {
      margin-bottom: 50px;
    }

    /* Card and Items Styling */
    .grocery-item {
      transition: box-shadow 0.3s ease;
      margin-bottom: 15px;
    }

    .grocery-item:hover {
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    .btn {
      background-color: #4caf50;
    }

    .btn.red {
      background-color: #e53935;
    }

    .card-title {
      font-weight: bold;
    }

    .card-content p {
      margin: 5px 0;
    }

    /* Meal Group Padding */
    .meal-group {
      margin-bottom: 40px;
      padding: 20px;
    }

    /* Vibrant Orange Background for the main content area */
    .main-content {
      background-color: #ff9800; /* Vibrant Orange */
      padding: 40px;
      min-height: 80vh; /* Ensures it takes up at least 3/4th of the page */
      border-radius: 10px;
    }

    /* Form Select Dropdown Spacing */
    .grocery-form .input-field select {
      width: 100%;
      margin-bottom: 20px; /* More space between the input fields */
    }

    /* Adjustments for smaller screens */
    @media screen and (max-width: 600px) {
      .grocery-item {
        font-size: 14px;
      }

      /* Adjust meal group padding for smaller screens */
      .meal-group {
        padding: 10px;
      }

      /* Reduce padding for smaller screens */
      .main-content {
        padding: 20px;
      }
    }
  </style>

  <body>
    <!-- Include Navigation Bar -->
    <%- include('partials/navbar') %>

    <!-- Main Content Area with vibrant orange background -->
    <div class="container">
      <div class="main-content">
        <h2 class="center-align">Grocery List</h2>

        <!-- Success Message -->
        <% if (typeof successMessage !== 'undefined' && successMessage) { %>
          <div class="card-panel green lighten-4 green-text text-darken-4 center-align" id="success-alert">
            <%= successMessage %>
          </div>
        <% } %>

        <!-- Add Grocery Form -->
        <form action="/grocery/add" method="POST" class="grocery-form row">
          <div class="input-field col s12 m3">
            <input id="name" name="name" type="text" required />
            <label for="name">Item Name</label>
          </div>
          <div class="input-field col s12 m2">
            <input id="quantity" name="quantity" type="number" min="1" required />
            <label for="quantity">Quantity</label>
          </div>
          <div class="input-field col s12 m3">
            <select id="unit" name="unit" required>
              <option value="" disabled selected>Choose unit</option>
              <option value="pcs">Pieces (pcs)</option>
              <option value="kg">Kilograms (kg)</option>
              <option value="g">Grams (g)</option>
              <option value="liters">Liters</option>
              <option value="ml">Milliliters</option>
              <option value="loaf">Loaf</option>
              <option value="pack">Pack</option>
            </select>
            <label for="unit">Select Unit</label>
          </div>
          <div class="input-field col s12 m3">
            <select id="mealPlan" name="mealPlan" required>
              <option value="" disabled selected>Choose Meal Plan</option>
              <option value="Breakfast">Breakfast</option>
              <option value="Lunch">Lunch</option>
              <option value="Snacks">Snacks</option>
              <option value="Dinner">Dinner</option>
            </select>
            <label for="mealPlan">Select Meal Plan</label>
          </div>
          <div class="input-field col s12 m2 center-align">
            <button type="submit" class="btn waves-effect waves-light">Add Item</button>
          </div>
        </form>

        <!-- Grocery List Grouped -->
        <div class="grocery-list">
          <% 
            const grouped = {};
            groceryList.forEach(item => {
              const key = item.mealPlan || 'Other';
              if (!grouped[key]) grouped[key] = [];
              grouped[key].push(item);
            });
          %>

          <% Object.keys(grouped).forEach(meal => { %>
            <div class="meal-group">
              <!-- Display meal plan or "Items Added" if "Other" -->
              <h5><%= meal === 'Other' ? 'Items Added' : meal %></h5>
              <div class="row">
                <% grouped[meal].forEach(item => { %>
                  <div class="col s12 m6 l4">
                    <div class="card grocery-item">
                      <div class="card-content">
                        <span class="card-title"><%= item.name %></span>
                        <p>Amount: <%= item.quantity %> <%= item.unit %></p>
                        <p>Status: <%= item.bought ? "âœ… Bought" : "ðŸ•“ Pending" %></p>
                      </div>
                      <div class="card-action">
                        <% if (!item.bought) { %>
                          <form action="/grocery/buy/<%= item._id %>" method="POST">
                            <label>
                              <input type="checkbox" onchange="this.form.submit()" />
                              <span>Mark as Bought</span>
                            </label>
                          </form>
                        <% } %>
                        <form action="/grocery/delete/<%= item._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this item?');">
                          <button type="submit" class="btn red">Delete</button>
                        </form>
                      </div>
                    </div>
                  </div>
                <% }) %>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </div>

    <!-- Materialize JS and Success Alert Auto-hide -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const selects = document.querySelectorAll('select');
        M.FormSelect.init(selects);

        const successAlert = document.getElementById('success-alert');
        if (successAlert) {
          setTimeout(() => {
            successAlert.style.display = 'none';
          }, 2000);
        }
      });
    </script>
  </body>
</html>
