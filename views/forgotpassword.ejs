<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Forgot Password - FoodMate</title>

    <!-- Styles -->
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/register.css" /> <!-- Reusing register page styling for consistency -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
        .auth-card {
            padding: 2rem;
            width: 100%;
            max-width: 400px;
            background: white;
            border-radius: 8px;
        }
        .footer-link {
            margin-top: 1rem;
            text-align: center;
        }
    </style>
</head>
<body class="auth-page">

    <div class="auth-card z-depth-1">
        <h5 class="center-align">Forgot Password</h5>
        <p class="center-align">Enter your registered email to reset your password</p>

        <form id="forgotPasswordForm" method="POST" action="/auth/forgot-password">
            <div class="input-field">
                <input id="email" type="email" name="email" required />
                <label for="email">Email</label>
            </div>

            <div class="center-align">
                <button type="submit" class="btn waves-effect waves-light">Send Reset Link</button>
            </div>
        </form>

        <div class="footer-link">
            <a href="/">Back to Login</a>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- Toast for messages -->
    <% if (message) { %>
        <script>
          document.addEventListener('DOMContentLoaded', function () {
            const toastClasses = '<%= messageType === "success" ? "green" : "red" %> white-text rounded';
            M.toast({
              html: <%- JSON.stringify(message) %>,
              classes: toastClasses
            });
          });
        </script>
      <% } %>
    

</body>
</html>
