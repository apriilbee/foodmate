<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Reset Password - FoodMate</title>

  <!-- Styles -->
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/css/register.css" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <style>
    .auth-card {
      padding: 2rem;
      width: 100%;
      max-width: 400px;
      background: white;
      border-radius: 8px;
    }
    .footer-link {
      margin-top: 1rem;
      text-align: center;
    }
  </style>
</head>
<body class="auth-page">

  <div class="auth-card z-depth-1">
    <h5 class="center-align">Reset Your Password</h5>
    <p class="center-align">Enter your new password below</p>

    <form method="POST" action="/auth/reset-password/<%= token %>">
      <div class="input-field">
        <input id="newPassword" name="newPassword" type="password" required />
        <label for="newPassword">New Password</label>
      </div>

      <div class="center-align">
        <button type="submit" class="btn waves-effect waves-light">Update Password</button>
      </div>
    </form>

    <div class="footer-link">
      <a href="/">Back to Login</a>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

  <!-- Toast for messages -->
  <% if (message) { %>
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const toastClasses = '<%= messageType === "success" ? "green" : "red" %> white-text rounded';
        M.toast({
          html: <%- JSON.stringify(message) %>,
          classes: toastClasses
        });
      });
    </script>
  <% } %>

</body>
</html>
