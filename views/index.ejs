<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %>
    <body>
        <div class="login-container">
            <!-- Left Form Section -->
            <div class="left-side">
                <div class="card login-card z-depth-1">
                    <!-- Logo / Header -->
                    <div class="login-header center-align">
                        <img src="/img/logo.png" alt="FoodMate" class="login-logo" />
                    </div>

                    <!-- Form -->
                    <div class="login-body">
                        <form action="/auth/login" method="POST">
                            <div class="input-field">
                                <input id="username" name="username" type="text" required />
                                <label for="username">Username</label>
                            </div>

                            <div class="input-field">
                                <input id="password" name="password" type="password" required />
                                <label for="password">Password</label>
                            </div>

                            <% if (error) { %>
                            <div style="color: red; text-align: center; margin-bottom: 1rem"><%= error %></div>
                            <% } %>

                            <button type="submit" class="btn full-btn">Login</button>
                        </form>
                    </div>

                    <!-- Footer -->
                    <div class="login-footer center-align">
                        <p>
                            Don't have an account?
                            <a href="/auth/register">Sign up here</a>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Right Banner Section -->
            <div class="right-side"></div>
        </div>
    </body>
    <%- include('partials/scripts') %>
</html>
