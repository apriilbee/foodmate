<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %>
    <link rel="stylesheet" href="/css/login.css" />
    <body>
        <div class="login-container">
            <div class="left-side">
                <div class="card login-card z-depth-2">
                    <div class="login-header center-align">
                        <img src="/img/logo-brand.svg" alt="FoodMate" class="login-logo" />
                    </div>

                    <form id="loginForm">
                        <div class="input-field">
                            <input id="email" name="email" type="text" required />
                            <label for="email">Email</label>
                        </div>

                        <div class="input-field">
                            <input id="password" name="password" type="password" required />
                            <label for="password">Password</label>
                        </div>

                        <div id="errorMessage" style="color: red; text-align: center; margin-bottom: 1rem">
                            <% if (error) { %><%= error %><% } %>
                        </div>

                        <button type="submit" class="btn full-btn" style="background-color: #fe8641">Login</button>

                        <p class="center-align" style="margin-top: 1rem">
                            Donâ€™t have an account?
                            <a href="/auth/register">Sign up</a>
                        </p>
                    </form>
                </div>
            </div>

            <!-- Image Section (RIGHT) -->
            <div class="right-side"></div>
        </div>

        <%- include('partials/scripts') %>
    </body>
</html>
